<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.asset</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='recommended_apps']/div[1]" position="before">
                <field name="module_account_asset" invisible="1"/>
            </xpath>
            <xpath expr="//div[@id='recommended_apps']" position="after">
                <h2>Odoo12 Accounting integration</h2>
                <div class="row mt16 o_settings_container" id="lbr_accounting_tools">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_om_account_accountant"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_om_account_accountant"/>
                            <div class="text-muted">
                                Install this module for activate accounting Reports, Asset Management and Account Budget For Odoo12 Community Edition.
                            </div>
                            <div id="msg_invoice_extract" class="content-group" attrs="{'invisible': [('module_om_account_accountant', '=', False)]}">
                                <div class="text-warning mt16 mb4">
                                    Save this page and come back here to apply the changes.
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="module_l10n_es_account_bank_statement_import_n43"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="module_l10n_es_account_bank_statement_import_n43"/>
                            <div class="text-muted">
                                Install this module for activate import of Spanish bank statements (Rule 43).<br/>
                                By Spanish Localization Team, Tecnativa, Odoo Community Association (OCA).
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>